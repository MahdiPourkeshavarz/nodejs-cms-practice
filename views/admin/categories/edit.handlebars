<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div
          class="card-header bg-primary text-white d-flex justify-content-between align-items-center"
        >
          <h5 class="mb-0">
            <i class="bi bi-pencil-square me-2"></i>Edit Category
          </h5>
          <a href="/admin/categories" class="btn btn-sm btn-light">
            <i class="bi bi-arrow-left me-1"></i>Back to List
          </a>
        </div>

        <div class="card-body">
          <form
            action="/admin/categories/update/{{category._id}}?_method=PUT"
            method="POST"
          >
            <div class="mb-3">
              <label for="name" class="form-label">Category Name</label>
              <input
                type="text"
                name="name"
                id="name"
                class="form-control"
                value="{{category.name}}"
                required
              />
              <div class="form-text">Update your category name</div>
            </div>

            <div class="mb-4">
              <label class="form-label">Metadata</label>
              <div class="card bg-light">
                <div class="card-body py-2">
                  <small class="text-muted d-block">
                    <strong>ID:</strong>
                    #{{category._id}}
                  </small>
                  <small class="text-muted d-block">
                    <strong>Created:</strong>
                    {{formatDate category.createdAt "MMMM D, YYYY [at] h:mm a"}}
                  </small>
                  {{#if category.updatedAt}}
                    <small class="text-muted d-block">
                      <strong>Last Updated:</strong>
                      {{formatDate
                        category.updatedAt
                        "MMMM D, YYYY [at] h:mm a"
                      }}
                    </small>
                  {{/if}}
                </div>
              </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <button type="reset" class="btn btn-outline-secondary me-md-2">
                <i class="bi bi-arrow-counterclockwise me-1"></i>Reset
              </button>
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle me-1"></i>Update Category
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Danger Zone (Delete) -->
<div class="container-fluid py-2">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card border-danger">
        <div class="card-header bg-danger text-white">
          <h5 class="mb-0">
            <i class="bi bi-exclamation-triangle me-2"></i>Danger Zone
          </h5>
        </div>
        <div class="card-body">
          <p class="text-muted mb-3">
            Deleting this category cannot be undone. Any posts associated with
            this category may need to be reassigned.
          </p>
          <form
            action="/admin/categories/delete/{{category._id}}?_method=DELETE"
            method="POST"
            onsubmit="return confirm('Are you sure you want to permanently delete this category?')"
          >
            <button type="submit" class="btn btn-danger">
              <i class="bi bi-trash me-1"></i>Delete This Category
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap Icons -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
/>

<style>
  .card { border: none; border-radius: 0.5rem; } .form-control:focus {
  box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15); } .card.border-danger {
  border: 1px solid var(--bs-danger); }
</style>