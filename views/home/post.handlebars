<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{post.title}} - Post Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        .post-image {
            max-height: 500px;
            width: 100%;
            object-fit: cover;
            margin-bottom: 20px;
        }
        .post-meta {
            color: #6c757d;
            font-size: 0.9rem;
        }
        .post-status-badge {
            font-size: 0.8rem;
            vertical-align: middle;
        }
        .post-body {
            white-space: pre-line;
            line-height: 1.8;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Post Header -->
                <div class="mb-4">
                    <h1 class="display-5 fw-bold">{{post.title}}</h1>

                    <div class="d-flex align-items-center mb-3">
                        <span class="post-meta me-3">
                            Posted by {{post.user.username}} on {{dateConverter post.date 'MMMM Do YYYY'}}
                        </span>
                        <span class="badge bg-{{#if (eq post.status 'public')}}success{{else}}warning text-dark{{/if}} post-status-badge">
                            {{post.status}}
                        </span>
                        {{#if post.allowComments}}
                            <span class="badge bg-info text-dark post-status-badge ms-2">
                                Comments allowed
                            </span>
                        {{else}}
                            <span class="badge bg-secondary post-status-badge ms-2">
                                Comments disabled
                            </span>
                        {{/if}}
                    </div>
                </div>

                <!-- Post Image -->
                {{#if post.file}}
                    <div class="mb-4">
                        <img src="/uploads/{{post.file}}" alt="{{post.title}}" class="post-image img-fluid rounded">
                    </div>
                {{/if}}

                <!-- Post Body -->
                <div class="card mb-4">
                    <div class="card-body post-body lead">
                        {{{post.body}}}
                    </div>
                </div>

                <!-- Action Buttons -->
                {{#if (isAuthor post.user._id)}}
                    <div class="d-flex gap-2 mb-5">
                        <a href="/posts/edit/{{post._id}}" class="btn btn-primary">Edit Post</a>
                        <form action="/posts/delete/{{post._id}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Delete Post</button>
                        </form>
                    </div>
                {{/if}}

                <!-- Comments Section -->
                {{#if post.allowComments}}
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Comments</h5>
                        </div>
                        <div class="card-body">
                            {{#if post.comments}}
                                {{#each post.comments}}
                                    <div class="mb-3 pb-3 border-bottom">
                                        <div class="d-flex justify-content-between">
                                            <strong>{{this.user.username}}</strong>
                                            <small class="text-muted">{{formatDate this.date 'MMMM Do YYYY, h:mm a'}}</small>
                                        </div>
                                        <p class="mb-0 mt-1">{{this.commentBody}}</p>
                                    </div>
                                {{/each}}
                            {{else}}
                                <p class="text-muted mb-0">No comments yet. Be the first to comment!</p>
                            {{/if}}
                        </div>
                    </div>

                    <!-- Add Comment Form -->
                    {{#if user}}
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Add a Comment</h5>
                            </div>
                            <div class="card-body">
                                <form action="/admin/comments/{{post._id}}" method="POST">
                                    <div class="mb-3">
                                        <textarea class="form-control" name="body" rows="3" placeholder="Write your comment here..." required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit Comment</button>
                                </form>
                            </div>
                        </div>
                    {{else}}
                        <div class="alert alert-info">
                            <a href="/users/login" class="alert-link">Login</a> to post a comment.
                        </div>
                    {{/if}}
                {{/if}}
            </div>
        </div>
        {{> home/sidebar}}
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>